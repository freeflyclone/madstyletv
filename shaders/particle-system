#version 430

struct VertexData {
  vec4 pos;
  vec4 tex;
  vec4 norm;
  vec4 color;
};

layout (std140, binding = 1) buffer VertexBuffer {
	VertexData verts[];
};

layout (local_size_x = 1024, local_size_y = 1, local_size_z = 1) in;

void main() {
	uint idx = gl_GlobalInvocationID.x;

	verts[idx].pos.x = 0;
	verts[idx].pos.y = 0;
	verts[idx].pos.z = 0;
}
