#version 430

struct VertexData {
  vec4 pos;
  vec4 norm;
  vec4 color;
};

layout (std140, binding = 1) buffer VertexBuffer {
	VertexData verts[];
};

layout (local_size_x = 1024, local_size_y = 1, local_size_z = 1) in;

void main() {

	uint idx = gl_GlobalInvocationID.x;

	vec3 pos = verts[idx].pos.xyz;
	pos.z += 0.01;

	verts[idx].pos = vec4(pos, 1.0);
}
